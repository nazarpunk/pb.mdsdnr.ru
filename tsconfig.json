{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "removeComments": true,
    "module": "None",
    "target": "ESNext",
    "inlineSourceMap": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ES2016.Array.Include"
    ],
    "types": [
      "chrome"
    ]
  },
  "include": [
    "extension/**/*",
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}